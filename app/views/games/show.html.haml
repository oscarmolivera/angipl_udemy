.jumbotron.jumbotron-fluid.my-1
  .container.text-center
    %p.lead
      ='Do you know your this word?'
    %h1.display-4
      = @word.content
    .row
      .col-md-4.offset-md-4  
        = simple_form_for :answer, url: answers_path, method: :post, remote: true do |f|
          = f.input :content, as: :string, label: false, input_html: { autocomplete: 'off', autofocus: 'on'}
          = f.input :game_id, as: :hidden, input_html: { value: @game.id }
          = f.input :word_id, as: :hidden, input_html: { value: @word.id }
          = f.button :submit, 'Check Answer', class: "btn-primary" 
    .row
      .col-md-4.offset-md-4
        %table.table
          %thead.text-center
            %tr
              %th.table-success
                Good Answers
              %th.table-danger
                Bad Answers
          %tbody.text-center
            %tr
              %td= @game.good_answers_count
              %td= @game.bad_answers_count

  