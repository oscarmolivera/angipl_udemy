.container-fluid
  %h2="Index View"
  %p
    ="We have this many word in the database"
    =@words.count
  .row
    .col-md-12
      %table.table
        %thead
          %tr
            %th
              \#
            %th
              Word Name
            %th
              Language
            %th
              User  
            %th
              Actions  
        %tbody
          -@words.each do |word|
            %tr
              %td= word.id 
              %td= word.content
              %td= word.language.name
              %td= word.user&.email
              %td
                = link_to('Show Word', word_path(word), class: 'btn btn-primary')
                = link_to('Edit Word', edit_word_path(word), class: 'btn btn-success')
                = link_to('Delete Word', word_path(word), method: :delete, class: 'btn btn-danger')
      = pagy_bootstrap_nav(@pagy).html_safe
